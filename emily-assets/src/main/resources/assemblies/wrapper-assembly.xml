<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>emily-wrapper-assembler</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/${wrapper.daemon.id}/lib</directory>
            <outputDirectory>lib</outputDirectory>
            <excludes>
                <exclude>maven-metadata-appassembler.xml</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/${wrapper.daemon.id}/conf</directory>
            <outputDirectory>conf</outputDirectory>
            <excludes>
                <exclude>VAADIN/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>conf</outputDirectory>
            <excludes>
                <exclude>assembly.xml</exclude>
                <exclude>META-INF/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/${wrapper.daemon.id}/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <fileMode>0755</fileMode>
            <lineEnding>keep</lineEnding>
        </fileSet>
        <fileSet>
            <directory>target/generated-resources/appassembler/jsw/${wrapper.daemon.id}/logs</directory>
            <outputDirectory>logs</outputDirectory>
            <excludes>
                <exclude>*</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>